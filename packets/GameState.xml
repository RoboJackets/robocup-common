<struct typename="GameState" external_cpp="GameState" include_cpp="GameState_ext.hpp">
    <!-- These enums are declared in GameState.hpp.  These declarations are here for the convenience of other languages
            which can't use the header. Make sure the two files stay in sync. -->
    <enum type="uint8" typename="Period">
        <constant name="FirstHalf"/>
        <constant name="Halftime"/>
        <constant name="SecondHalf"/>
        <constant name="Overtime1"/>
        <constant name="Overtime2"/>
        <constant name="PenaltyShootout"/>
    </enum>
    
    <enum type="uint8" typename="State">
        <constant name="Halt"/>         <!-- Robots must not move -->
        <constant name="Stop"/>         <!-- Robots must stay 500mm away from ball -->
        <constant name="Setup"/>        <!-- Robots not on starting team must stay 500mm away from ball -->
        <constant name="Ready"/>        <!-- A robot on the starting team may kick the ball -->
        <constant name="Playing"/>      <!-- Normal play -->
    </enum>
    
    <!-- Types of restarts -->
    <enum type="uint8" typename="Restart">
        <constant name="None"/>
        <constant name="Kickoff"/>
        <constant name="Direct"/>
        <constant name="Indirect"/>
        <constant name="Penalty"/>
    </enum>
    
    <member type="Period" name="period"/>
    <member type="State" name="state"/>
    <member type="Restart" name="restart"/>
    
    <!-- True if our team can kick the ball during a restart -->
    <member type="bool" name="ourRestart"/>
    
    <!-- Scores -->
    <member type="uint8" name="ourScore"/>
    <member type="uint8" name="theirScore"/>
    
    <!-- Time in seconds remaining in the current period -->
    <member type="uint16" name="secondsRemaining"/>

    <member type="uint32" name="numPackets"/>
</struct>
